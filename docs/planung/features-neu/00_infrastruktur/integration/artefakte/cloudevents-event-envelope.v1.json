{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://freshplan.example/schemas/cloudevents-event-envelope.v1.json",
  "title": "FreshPlan CloudEvents 1.0 Envelope",
  "type": "object",
  "required": [
    "id",
    "type",
    "source",
    "specversion",
    "time",
    "datacontenttype",
    "data"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "pattern": "^[a-z]+(\\.[a-z_]+)+$"
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "specversion": {
      "type": "string",
      "const": "1.0"
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "subject": {
      "type": "string"
    },
    "datacontenttype": {
      "type": "string",
      "const": "application/json"
    },
    "dataschema": {
      "type": "string"
    },
    "correlationId": {
      "type": "string",
      "minLength": 1
    },
    "tenantId": {
      "type": "string",
      "minLength": 1
    },
    "orgId": {
      "type": "string",
      "minLength": 1
    },
    "data": {
      "type": "object"
    }
  },
  "additionalProperties": true
}