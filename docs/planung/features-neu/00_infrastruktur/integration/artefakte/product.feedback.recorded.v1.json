{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "product.feedback.recorded data",
  "type": "object",
  "required": [
    "feedbackId",
    "customerId",
    "leadId",
    "recordedAt",
    "items"
  ],
  "properties": {
    "feedbackId": {
      "type": "string",
      "format": "uuid"
    },
    "leadId": {
      "type": "string",
      "format": "uuid"
    },
    "customerId": {
      "type": "string",
      "format": "uuid"
    },
    "recordedAt": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "sku",
          "scoreTaste",
          "scoreEase"
        ],
        "properties": {
          "sku": {
            "type": "string"
          },
          "scoreTaste": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "scoreEase": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "wastePct": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}