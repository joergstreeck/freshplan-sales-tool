{
  "customer": {
    "base": [
      {
        "key": "customerNumber",
        "label": "Kundennummer",
        "entityType": "customer",
        "fieldType": "text",
        "required": false,
        "maxLength": 20,
        "placeholder": "z.B. KD-2025-001 (optional)",
        "helpText": "Optional: Eigene Kundennummer für interne Referenz"
      },
      {
        "key": "companyName",
        "label": "Firmenname",
        "entityType": "customer",
        "fieldType": "text",
        "required": true,
        "maxLength": 100,
        "placeholder": "z.B. Hotel zur goldenen Krone GmbH",
        "helpText": "Vollständiger Firmenname wie im Handelsregister"
      },
      {
        "key": "legalForm",
        "label": "Rechtsform",
        "entityType": "customer",
        "fieldType": "select",
        "required": true,
        "options": [
          {
            "value": "gmbh",
            "label": "GmbH"
          },
          {
            "value": "gmbh_co_kg",
            "label": "GmbH & Co. KG"
          },
          {
            "value": "ag",
            "label": "AG"
          },
          {
            "value": "eg",
            "label": "eG"
          },
          {
            "value": "einzelunternehmen",
            "label": "Einzelunternehmen"
          },
          {
            "value": "gbr",
            "label": "GbR"
          },
          {
            "value": "ohg",
            "label": "OHG"
          },
          {
            "value": "kg",
            "label": "KG"
          },
          {
            "value": "verein",
            "label": "e.V."
          },
          {
            "value": "stiftung",
            "label": "Stiftung"
          },
          {
            "value": "sonstige",
            "label": "Sonstige"
          }
        ]
      },
      {
        "key": "businessType",
        "label": "Geschäftstyp",
        "entityType": "customer",
        "fieldType": "enum",
        "enumSource": "business-types",
        "required": true,
        "helpText": "Wählen Sie den Geschäftstyp des Unternehmens (einheitliche Klassifizierung)"
      },
      {
        "key": "chainCustomer",
        "label": "Filialunternehmen",
        "entityType": "customer",
        "fieldType": "select",
        "required": true,
        "defaultValue": "nein",
        "options": [
          {
            "value": "ja",
            "label": "Ja"
          },
          {
            "value": "nein",
            "label": "Nein"
          }
        ],
        "helpText": "Hat Ihr Unternehmen mehrere Standorte?",
        "triggerWizardStep": {
          "when": "ja",
          "step": "locations"
        }
      },
      {
        "key": "financingType",
        "label": "Geschäftsmodell",
        "entityType": "customer",
        "fieldType": "select",
        "required": true,
        "size": "large",
        "options": [
          {
            "value": "private",
            "label": "Privatwirtschaftlich (Hotels, Restaurants, Unternehmen)"
          },
          {
            "value": "public",
            "label": "Öffentlich finanziert (Schulen, Krankenhäuser, Behörden)"
          },
          {
            "value": "mixed",
            "label": "Mischfinanzierung (z.B. PPP-Projekte)"
          }
        ],
        "helpText": "Die Finanzierungsart beeinflusst Entscheidungsprozesse und Verkaufsargumente"
      },
      {
        "key": "street",
        "label": "Straße und Hausnummer",
        "entityType": "customer",
        "fieldType": "text",
        "required": true,
        "maxLength": 100,
        "placeholder": "z.B. Hauptstraße 42"
      },
      {
        "key": "postalCode",
        "label": "PLZ",
        "entityType": "customer",
        "fieldType": "text",
        "required": true,
        "validation": "germanPostalCode",
        "maxLength": 5,
        "placeholder": "12345",
        "helpText": "5-stellige deutsche Postleitzahl"
      },
      {
        "key": "city",
        "label": "Ort",
        "entityType": "customer",
        "fieldType": "text",
        "required": true,
        "maxLength": 50,
        "placeholder": "z.B. Berlin"
      },
      {
        "key": "contactName",
        "label": "Ansprechpartner",
        "entityType": "customer",
        "fieldType": "text",
        "required": true,
        "maxLength": 100,
        "placeholder": "Vor- und Nachname",
        "helpText": "Hauptansprechpartner für Vertriebsthemen"
      },
      {
        "key": "contactEmail",
        "label": "E-Mail",
        "entityType": "customer",
        "fieldType": "email",
        "required": true,
        "validation": "email",
        "maxLength": 100,
        "placeholder": "kontakt@beispiel.de",
        "helpText": "Hauptkontakt-E-Mail für Angebote und Rechnungen"
      },
      {
        "key": "contactPhone",
        "label": "Telefon",
        "entityType": "customer",
        "fieldType": "text",
        "required": true,
        "validation": "germanPhone",
        "maxLength": 30,
        "placeholder": "+49 30 123456789",
        "helpText": "Telefonnummer mit Vorwahl"
      },
      {
        "key": "currentSupplier",
        "label": "Aktueller Lieferant",
        "entityType": "customer",
        "fieldType": "text",
        "required": false,
        "maxLength": 100,
        "placeholder": "z.B. Apetito, eigene Küche",
        "helpText": "Wer beliefert den Kunden aktuell?"
      },
      {
        "key": "contractEndDate",
        "label": "Vertragsende",
        "entityType": "customer",
        "fieldType": "select",
        "required": false,
        "size": "medium",
        "options": [
          {
            "value": "open",
            "label": "Unbefristet / Kein Vertrag"
          },
          {
            "value": "next_3_months",
            "label": "In den nächsten 3 Monaten"
          },
          {
            "value": "next_6_months",
            "label": "In 3-6 Monaten"
          },
          {
            "value": "next_12_months",
            "label": "In 6-12 Monaten"
          },
          {
            "value": "over_12_months",
            "label": "Über 12 Monate"
          }
        ],
        "helpText": "Wann endet der aktuelle Vertrag? (für automatische Wiedervorlage)",
        "triggerTaskGeneration": true
      },
      {
        "key": "switchWillingness",
        "label": "Wechselbereitschaft",
        "entityType": "customer",
        "fieldType": "select",
        "required": false,
        "size": "medium",
        "options": [
          {
            "value": "immediate",
            "label": "Sofort wechselbereit"
          },
          {
            "value": "high",
            "label": "Hoch - aktiv am Suchen"
          },
          {
            "value": "medium",
            "label": "Mittel - offen für Alternativen"
          },
          {
            "value": "low",
            "label": "Niedrig - zufrieden mit Status Quo"
          },
          {
            "value": "none",
            "label": "Keine - fest gebunden"
          }
        ],
        "helpText": "Wie schätzen Sie die Wechselbereitschaft ein?"
      },
      {
        "key": "decisionTimeline",
        "label": "Entscheidungszeitpunkt",
        "entityType": "customer",
        "fieldType": "select",
        "required": false,
        "size": "medium",
        "options": [
          {
            "value": "immediate",
            "label": "Sofortige Entscheidung möglich"
          },
          {
            "value": "1_month",
            "label": "Innerhalb 1 Monat"
          },
          {
            "value": "3_months",
            "label": "In 1-3 Monaten"
          },
          {
            "value": "6_months",
            "label": "In 3-6 Monaten"
          },
          {
            "value": "12_months",
            "label": "In 6-12 Monaten"
          },
          {
            "value": "over_12_months",
            "label": "Später als 12 Monate"
          },
          {
            "value": "unknown",
            "label": "Noch unklar"
          }
        ],
        "helpText": "Wann wird voraussichtlich eine Entscheidung getroffen?",
        "triggerTaskGeneration": true
      }
    ],
    "industrySpecific": {
      "hotel": [
        {
          "key": "starRating",
          "label": "Sterne-Kategorie",
          "entityType": "customer",
          "fieldType": "select",
          "required": false,
          "options": [
            {
              "value": "1",
              "label": "1 Stern"
            },
            {
              "value": "2",
              "label": "2 Sterne"
            },
            {
              "value": "3",
              "label": "3 Sterne"
            },
            {
              "value": "4",
              "label": "4 Sterne"
            },
            {
              "value": "5",
              "label": "5 Sterne"
            },
            {
              "value": "none",
              "label": "Keine Klassifizierung"
            }
          ],
          "condition": {
            "field": "businessType",
            "operator": "equals",
            "value": "HOTEL"
