          "options": [
            {
              "value": "ja",
              "label": "Ja"
            },
            {
              "value": "nein",
              "label": "Nein"
            }
          ],
          "condition": {
            "field": "businessType",
            "operator": "in",
            "value": [
              "HOTEL",
              "KANTINE"
            ]
          }
        },
        {
          "key": "conferenceCapacity",
          "label": "Max. Tagungsgäste",
          "entityType": "customer",
