{
  "theme": {
    "colors": {
      "primary": "#004f7b",
      "primaryGreen": "#94c456",
      "darkGreen": "#7fb040",
      "warning": "#ff9800",
      "danger": "#f44336",
      "success": "#4caf50",
      "bgLight": "#f8f9fa",
      "textDark": "#333",
      "textLight": "#666",
      "borderLight": "#e0e0e0"
    },
    "fonts": {
      "primary": "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif",
      "heading": "'Antonio', sans-serif"
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "xxl": "3rem"
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "full": "50%"
    }
  },
  "layout": {
    "maxWidth": "1400px",
    "gridColumns": {
      "desktop": "1fr 1fr",
      "mobile": "1fr"
    },
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px",
      "desktop": "1200px"
    }
  },
  "components": {
    "header": {
      "height": "auto",
      "background": "white",
      "logoHeight": "50px",
      "textColor": "var(--primary)",
      "taglineColor": "var(--primaryGreen)"
    },
    "navigation": {
      "tabPadding": "1rem 2rem",
      "activeIndicatorColor": "var(--primaryGreen)",
      "borderWidth": "3px"
    },
    "calculator": {
      "sliderHeight": "6px",
      "thumbSize": "20px",
      "resultGrid": "repeat(3, 1fr)"
    },
    "forms": {
      "inputPadding": "0.75rem",
      "borderRadius": "8px",
      "focusShadow": "0 0 0 3px rgba(148, 196, 86, 0.1)"
    },
    "buttons": {
      "padding": "0.75rem 1.5rem",
      "borderRadius": "8px",
      "hoverTransform": "translateY(-1px)",
      "hoverShadow": "0 4px 12px rgba(148, 196, 86, 0.3)"
    },
    "alerts": {
      "padding": "1.5rem",
      "borderRadius": "12px",
      "iconSize": "24px"
    }
  }
}